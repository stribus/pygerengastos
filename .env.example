# Configuração das APIs de LLM
# Obtenha sua chave do Gemini em: https://aistudio.google.com/apikey
GEMINI_API_KEY=sua_chave_api_aqui
NVIDIA_API_KEY=sua_chave_api_aqui
OPENAI_API_KEY=sua_chave_api_aqui

# Configurações opcionais do LiteLLM
LITELLM_LOG=DEBUG
LLM_NUM_RETRIES=2

# Limites por modelo (opcionais)
# Os nomes são normalizados: caracteres não alfanuméricos viram underscore.
# Exemplo: gemini/gemini-2.5-flash-lite => GEMINI_GEMINI_2_5_FLASH_LITE
LLM_MODEL_GEMINI_GEMINI_2_5_FLASH_LITE_MAX_TOKENS=8000
LLM_MODEL_GEMINI_GEMINI_2_5_FLASH_LITE_MAX_ITENS=50
LLM_MODEL_GEMINI_GEMINI_2_5_FLASH_LITE_TIMEOUT=30

LLM_MODEL_NVIDIA_NIM_META_LLAMA3_70B_INSTRUCT_MAX_TOKENS=4096
LLM_MODEL_NVIDIA_NIM_META_LLAMA3_70B_INSTRUCT_MAX_ITENS=20
LLM_MODEL_NVIDIA_NIM_META_LLAMA3_70B_INSTRUCT_TIMEOUT=45

LLM_MODEL_NVIDIA_NIM_MOONSHOTAI_KIMI_K2_5_MAX_TOKENS=8192
LLM_MODEL_NVIDIA_NIM_MOONSHOTAI_KIMI_K2_5_MAX_ITENS=25
LLM_MODEL_NVIDIA_NIM_MOONSHOTAI_KIMI_K2_5_TIMEOUT=45

LLM_MODEL_OPENAI_GPT_4O_MAX_TOKENS=4096
LLM_MODEL_OPENAI_GPT_4O_MAX_ITENS=30
LLM_MODEL_OPENAI_GPT_4O_TIMEOUT=30
